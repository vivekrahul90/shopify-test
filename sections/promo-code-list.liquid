{%- liquid
  assign base_size_heading = settings.heading_base_size | times: 0.0225 
  assign font_size_heading = section.settings.heading_size | times: 0.01 | times: base_size_heading

  case section.settings.column_layout_desktop
    when 'lg:w-full'
      assign columns_desktop = 1
    when 'lg:w-1/2'
      assign columns_desktop = 2
    when 'lg:w-1/3'
      assign columns_desktop = 3
    when 'lg:w-1/4'
      assign columns_desktop = 4
    when 'lg:w-1/5'
      assign columns_desktop = 5
    when 'lg:w-1/6'
      assign columns_desktop = 6
  endcase

  case section.settings.column_layout_mobile
    when 'w-full'
      assign columns_mobile = 1
    when 'w-1/2'
      assign columns_mobile = 2
  endcase

  assign swiper_on_mobile = section.settings.swiper_on_mobile 
  if section.blocks.size <= columns_mobile 
    assign swiper_on_mobile = false
  endif

  assign enable_desktop_slider = section.settings.enable_desktop_slider
  if section.blocks.size <= columns_desktop
    assign enable_desktop_slider = false
  endif

  assign contentWidthClass = 'page-width'
  if section.settings.full_width
    assign contentWidthClass = 'md:px-0 md:max-w-full'
  endif
  assign mobileWidthClass = 'page-width'
  if section.settings.full_width_mobile
    assign mobileWidthClass = 'px-0 md:px-5'
  endif
  assign rounded_corner = true
  if section.settings.full_width and section.settings.padding_full_width == false
    assign rounded_corner = false
  elsif section.settings.full_width == false and section.settings.secondary_background == "section"
    assign rounded_corner = false
  endif
  assign column_content_alignment = section.settings.column_content_alignment
-%}
{%- style -%}
  .title--{{ section.id }} {
    font-size: {{ font_size_heading | times: 0.60 }}rem; 
  }
  .size-icon-{{ section.id }} {
    width: {{ section.settings.icon_size | times: 0.7 }}px;
    height: {{ section.settings.icon_size | times: 0.7 }}px;
  }
  .color-icon--{{ section.id }} {
    {% if section.settings.color_icon_light.alpha != 0.0 %}
      color: {{ section.settings.color_icon_light }};
    {% else %}
      color: {{ settings.secondary_text }};
    {% endif %}
  }
  .dark .color-icon--{{ section.id }} {
    {% if section.settings.color_icon_dark.alpha != 0.0 %}
      color: {{ section.settings.color_icon_dark }};
    {% else %}
      color: rgb(var(--colors-text));
    {% endif %}
  }
  .bg-{{ section.id }} {
    {% if section.settings.background_color_light.alpha != 0.0 %}
      background: {{ section.settings.background_color_light }};
      --colors-background: {{ section.settings.background_color_light.red }}, {{ section.settings.background_color_light.green }}, {{ section.settings.background_color_light.blue }};
    {% else %}
      --colors-background: var(--colors-background-secondary);
      background: rgb(var(--colors-background-secondary));
    {% endif %}
  }
  .dark .bg-{{ section.id }} {
    {% if section.settings.background_color_dark.alpha != 0.0 %}
      background: {{ section.settings.background_color_dark }};
      --colors-background: {{ section.settings.background_color_dark.red }}, {{ section.settings.background_color_dark.green }}, {{ section.settings.background_color_dark.blue }};
    {% else %}
      background: rgb(var(--colors-background-secondary));
      --colors-background: var(--colors-background-secondary);
    {% endif %}
  }
  .color--{{ section.id }} {
    {% if section.settings.text_light.alpha != 0.0 %}
      --colors-text: {{ section.settings.text_light.red }},{{ section.settings.text_light.green }},{{ section.settings.text_light.blue }};
    {% endif %}
    {% if section.settings.line_border_light.alpha != 0.0 %}
    --colors-line-and-border: {{ section.settings.line_border_light.red }},{{ section.settings.line_border_light.green }},{{ section.settings.line_border_light.blue }};
    {% endif %}
    {% if section.settings.heading_light.alpha != 0.0 %}
      --colors-heading: {{ section.settings.heading_light.red }},{{ section.settings.heading_light.green }},{{ section.settings.heading_light.blue }};
    {% endif %}
  }
  .color--{{ section.id }}, .color--{{ section.id }} *:before {
    {% if section.settings.button_light.alpha != 0.0 %}
      --colors-button: {{ section.settings.button_light.red }}, {{ section.settings.button_light.green }}, {{ section.settings.button_light.blue }};
    {% endif %}
    {% if section.settings.button_text_light.alpha != 0.0 %}
      --colors-button-text: {{ section.settings.button_text_light.red }}, {{ section.settings.button_text_light.green }}, {{ section.settings.button_text_light.blue }};
    {% endif %}
    {% if section.settings.button_hover_light.alpha != 0.0 %}
      --colors-button-hover: rgb({{ section.settings.button_hover_light.red }}, {{ section.settings.button_hover_light.green }}, {{ section.settings.button_hover_light.blue }});
    {% endif %}
    {% if section.settings.button_text_hover_light.alpha != 0.0 %}
      --colors-button-text-hover: {{ section.settings.button_text_hover_light.red }}, {{ section.settings.button_text_hover_light.green }}, {{ section.settings.button_text_hover_light.blue }};
    {% endif %}
    {% if section.settings.secondary_button_text_light.alpha != 0.0 %}
      --colors-secondary-button: {{ section.settings.secondary_button_text_light.red }}, {{ section.settings.secondary_button_text_light.green }}, {{ section.settings.secondary_button_text_light.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_text_light.red }}, {{ section.settings.secondary_button_text_light.green }}, {{ section.settings.secondary_button_text_light.blue }};
      --background-secondary-button: transparent;
    {% endif %}
    {% if section.settings.secondary_button_light.alpha != 0.0 %}
      --background-secondary-button: {{ section.settings.secondary_button_light.red }}, {{ section.settings.secondary_button_light.green }}, {{ section.settings.secondary_button_light.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_light.red }}, {{ section.settings.secondary_button_light.green }}, {{ section.settings.secondary_button_light.blue }};
    {% endif %}
  }
  .dark .color--{{ section.id }} {
    {% if section.settings.line_border_dark.alpha != 0.0 %}
      --colors-line-and-border: {{ section.settings.line_border_dark.red }},{{ section.settings.line_border_dark.green }},{{ section.settings.line_border_dark.blue }};
    {% else %}        
      --colors-line-and-border: {{ settings.colors_line_and_borders.red }}, {{ settings.colors_line_and_borders.green }}, {{ settings.colors_line_and_borders.blue }};
    {% endif %}
    {% if section.settings.text_dark.alpha != 0.0 %}
      --colors-text: {{ section.settings.text_dark.red }},{{ section.settings.text_dark.green }},{{ section.settings.text_dark.blue }};
    {% else %}        
      --colors-text: var(--colors-text-secondary);
    {% endif %}
    {% if section.settings.heading_dark.alpha != 0.0 %}
      --colors-heading: {{ section.settings.heading_dark.red }},{{ section.settings.heading_dark.green }},{{ section.settings.heading_dark.blue }};
    {% else %}        
      --colors-heading: var(--colors-heading-secondary);
    {% endif %}
  }
  .dark .color--{{ section.id }}, .dark .color--{{ section.id }} *:before {
    {% if section.settings.button_dark.alpha != 0.0 %}
      --colors-button: {{ section.settings.button_dark.red }}, {{ section.settings.button_dark.green }}, {{ section.settings.button_dark.blue }};
    {% else %}  
      --colors-button: {{ settings.colors_dark_button.red }}, {{ settings.colors_dark_button.green }}, {{ settings.colors_dark_button.blue }};
    {% endif %}
    {% if section.settings.button_text_dark.alpha != 0.0 %}
      --colors-button-text: {{ section.settings.button_text_dark.red }}, {{ section.settings.button_text_dark.green }}, {{ section.settings.button_text_dark.blue }};
    {% else %} 
      --colors-button-text: {{ settings.colors_dark_button_text.red }}, {{ settings.colors_dark_button_text.green }}, {{ settings.colors_dark_button_text.blue }}; 
    {% endif %}
    {% if section.settings.button_hover_dark.alpha != 0.0 %}
      --colors-button-hover: rgb({{ section.settings.button_hover_dark.red }}, {{ section.settings.button_hover_dark.green }}, {{ section.settings.button_hover_dark.blue }});
    {% else %}  
      --colors-button-hover: rgb({{ settings.colors_dark_button_hover.red }}, {{ settings.colors_dark_button_hover.green }}, {{ settings.colors_dark_button_hover.blue }});
    {% endif %}
    {% if section.settings.button_text_hover_dark.alpha != 0.0 %}
      --colors-button-text-hover: {{ section.settings.button_text_hover_dark.red }}, {{ section.settings.button_text_hover_dark.green }}, {{ section.settings.button_text_hover_dark.blue }};
    {% else %}  
      --colors-button-text-hover: {{ settings.colors_dark_button_text_hover.red }}, {{ settings.colors_dark_button_text_hover.green }}, {{ settings.colors_dark_button_text_hover.blue }};
    {% endif %}
    {% if section.settings.secondary_button_text_dark.alpha != 0.0 %}
      --colors-secondary-button: {{ section.settings.secondary_button_text_dark.red }}, {{ section.settings.secondary_button_text_dark.green }}, {{ section.settings.secondary_button_text_dark.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_text_dark.red }}, {{ section.settings.secondary_button_text_dark.green }}, {{ section.settings.secondary_button_text_dark.blue }};
      --background-secondary-button: transparent;
    {% else %}  
      --colors-secondary-button: {{ settings.colors_dark_button_secondary.red }}, {{ settings.colors_dark_button_secondary.green }}, {{ settings.colors_dark_button_secondary.blue }};
      --colors-line-secondary-button: {{ settings.colors_dark_button_secondary.red }}, {{ settings.colors_dark_button_secondary.green }}, {{ settings.colors_dark_button_secondary.blue }};
    {% endif %}
    {% if section.settings.secondary_button_dark.alpha != 0.0 %}
      --background-secondary-button: {{ section.settings.secondary_button_dark.red }}, {{ section.settings.secondary_button_dark.green }}, {{ section.settings.secondary_button_dark.blue }};
      --colors-line-secondary-button: {{ section.settings.secondary_button_dark.red }}, {{ section.settings.secondary_button_dark.green }}, {{ section.settings.secondary_button_dark.blue }};
    {% elsif settings.background_dark_button_secondary.alpha != 0.0 %}  
      --background-secondary-button: {{ settings.background_dark_button_secondary.red }}, {{ settings.background_dark_button_secondary.green }}, {{ settings.background_dark_button_secondary.blue }};
      --colors-line-secondary-button: {{ settings.background_dark_button_secondary.red }}, {{ settings.background_dark_button_secondary.green }}, {{ settings.background_dark_button_secondary.blue }};
    {% else %}
      --background-secondary-button: transparent;
    {% endif %}
  }
  .coupon-code-{{ section.id }} {
    {%- if section.settings.coupon_color.alpha != 0 -%}
      color: {{ section.settings.coupon_color }};
    {%- endif -%}
  }
  .dark .coupon-code-{{ section.id }} {
    {%- if section.settings.coupon_color_dark.alpha != 0 -%}
      color: {{ section.settings.coupon_color_dark }};
    {% else %}
      color: var(--colors-text);
    {%- endif -%}
  }
  {% if swiper_on_mobile %}
    @media (max-width: 1023px) {
      .line-slider-mobile--{{ section.id }}:after {
        right: -{{ section.settings.spacing_mobile | times: 0.5 }}px;
      }
      .preload-slide-mobile--{{ section.id }} {
        {%- if settings.lang_direction contains request.locale.iso_code %} 
          margin-left: {{ section.settings.spacing_mobile }}px;
        {% else %}
          margin-right: {{ section.settings.spacing_mobile }}px;
        {% endif %}
        width: calc(((100% + {{ section.settings.spacing_mobile }}px) / 2) - {{ section.settings.spacing_mobile }}px);
      }
    }
    @media (max-width: 767px) {
      .preload-slide-mobile--{{ section.id }} {
        width: calc(((100% + {{ section.settings.spacing_mobile }}px) / {{ columns_mobile }}) - {{ section.settings.spacing_mobile }}px);
      }
    }
  {% endif %}
  @media (min-width: 1024px){
    .title--{{ section.id }} {
      font-size: {{ font_size_heading }}rem;
    }
    .size-icon-{{ section.id }} {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
    }
    .spacing-desktop-{{ section.id }} {
      padding: {{ section.settings.spacing_desktop | times: 0.5 }}px;
    }
    .spacing-desktop-{{ section.id }}-splide { 
      margin: -{{ section.settings.spacing_desktop | times: 0.5 }}px!important;
    }
    {% if enable_desktop_slider %}
      .rtl .line-slider--{{ section.id }}:after,
      .line-slider--{{ section.id }}:after {
        right: -{{ section.settings.spacing_desktop | times: 0.5 }}px;
      }
      .preload-slide--{{ section.id }} {
        {%- if settings.lang_direction contains request.locale.iso_code %} 
          margin-left: {{ section.settings.spacing_desktop }}px;
        {% else %}
          margin-right: {{ section.settings.spacing_desktop }}px;
        {% endif %}
        width: calc(((100% + {{ section.settings.spacing_desktop }}px) / {{ columns_desktop }}) - {{ section.settings.spacing_desktop }}px);
      }
    {% endif %}
  }
  @media (max-width: 1023px) {
    .spacing--{{ section.id }} {
      {% unless swiper_on_mobile %}
        padding-left: {{ section.settings.spacing_mobile | times: 0.5 }}px;
        padding-right: {{ section.settings.spacing_mobile | times: 0.5 }}px;
      {% endunless %}
      padding-top: {{ section.settings.spacing_mobile | times: 0.5 }}px;
      padding-bottom: {{ section.settings.spacing_mobile | times: 0.5 }}px;
    }
  }
  @media (max-width: 767px) {
    {% if section.settings.column_layout_mobile == 'w-1/2' %}
      .spacing--{{ section.id }}-splide { 
        margin: -{{ section.settings.spacing_mobile | times: 0.5 }}px!important;
      }
    {% endif %}
    .spacing--{{ section.id }} {
      {% if section.settings.column_layout_mobile != 'w-1/2' %}
        padding-left: 0px;
        padding-right: 0px;
      {% endif %}
    }
  }
{%- endstyle -%}

{% render 'section-divider' %}

{% if section.settings.padding_full_width and section.settings.full_width %}
  <div class=" md:pl-5 md:pr-5">
{% endif %}
  <div x-data="xCounponCodeList('{{ section.id }}')" class="{% if section.settings.secondary_background == "section" %}bg-{{ section.id }}{% if settings.edges_type == 'rounded_corners' and rounded_corner %} md:rounded-[10px]{% else %} md:rounded-none{% endif %}{% endif %} pb-[{{ section.settings.padding_bottom_mobile }}px] pt-[{{ section.settings.padding_top_mobile }}px] md:pb-[{{ section.settings.padding_bottom }}px] md:pt-[{{ section.settings.padding_top }}px] section--{{ section.id }}">
    {% if section.settings.title != blank %}
      <{{ section.settings.heading_tag }} class="text-center h2 block empty:hidden title--{{ section.id }} pb-5 md:pb-8 leading-tight p-break-words pr-5 pl-5{% unless section.settings.full_width %} page-width mx-auto{% endunless %}">{{ section.settings.title | escape }}</{{ section.settings.heading_tag }}>
    {% endif %}
    
    <div
      x-init="$store.xCounponCodeDetail.getDiscountCode();"
      {% unless request.design_mode %}
        x-intersect.once.margin.200px.once='load();'
      {% else %}
        x-intersect.once.margin.200px.once='load();'
      {% endunless %}
      id="x-promo-code-list-{{ section.id }}" 
      class="text-column-with-icon color--{{ section.id }} mx-auto {{ contentWidthClass }}{% if section.settings.full_width_mobile or section.settings.full_width %} {{ mobileWidthClass }}{% endif %}"
    >
      {% unless request.design_mode %}
        <div x-show="loading" class="overflow-hidden">
          {% render 'skeleton-promo-code-list'
            section_id: section.id,
            columns_desktop: columns_desktop,
            columns_mobile: columns_mobile,
            swiper_on_mobile: swiper_on_mobile,
            enable_desktop_slider: enable_desktop_slider,
            spacing_desktop: section.settings.spacing_desktop,
            spacing_mobile: section.settings.spacing_mobile,
            blocks: section.blocks.size,
            column_layout_desktop: section.settings.column_layout_desktop,
            column_layout_mobile: section.settings.column_layout_mobile
          %}
        </div>
      {% endunless %}
      <div
        {% unless request.design_mode %}
          x-cloak
          x-show="!loading"
        {% endunless %}
        {% if enable_desktop_slider or swiper_on_mobile -%}
        id="x-promo-code-splide-{{ section.id }}"
        class="x-splide splide visible"
        x-intersect.once.margin.200px='$store.xSplide.load($el, {    
          "type": "loop",
          "speed": 1000, 
          "pagination": false, 
          "interval": {{ section.settings.change_bar_every | times: 1000 }},
          "autoplay": true,
          "mediaQuery": "min", 
          "updateOnMove": "true",
          {%- if settings.lang_direction contains request.locale.iso_code %} 
            "direction": "rtl",
          {%- endif %}
          "breakpoints": {
            300: {
              {% if swiper_on_mobile == false -%} 
                "destroy": true,
              {%- endif %}
              "gap": "{{ section.settings.spacing_mobile }}px",
              "focus": "right",
              "perPage": {{ columns_mobile }},
              "perMove": {{ columns_mobile }}
            },
            768: {
              "perPage": 2,
              "perMove": 2
            },
            1024: {
              {% if enable_desktop_slider == false -%} 
                "destroy": true,
              {%- else %}
                "destroy": false,
              {%- endif %}
              "perPage": {{ columns_desktop }},
              "perMove": {{ columns_desktop }},
              "gap": "{{ section.settings.spacing_desktop }}px"
            }
          },
          "classes": {
            "arrows" : "hidden", 
          }
        })'{%- endif -%}
      >
        <div class="splide__track lg:pt-0.5 lg:pb-0.5 {% if swiper_on_mobile %} pr-10 md:pl-0 md:pr-0{% endif %} lg:pl-0 lg:pr-0{% if enable_desktop_slider %} md:cursor-grab lg:overflow-hidden{% else %} lg:overflow-visible{% endif %}{% if swiper_on_mobile and section.blocks.size > 2 %} md:overflow-hidden{%  else %} md:overflow-visible{%  endif %}">
          <div class="splide__list flex lg:flex{% unless enable_desktop_slider %} lg:flex-wrap lg:justify-center lg:gap-0 lg:w-auto spacing-desktop-{{ section.id }}-splide{% else %} lg:justify-start lg:flex-nowrap lg:w-full{% endunless %}
            {% unless swiper_on_mobile %} justify-center flex-wrap spacing--{{ section.id }}-splide{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {%- liquid 
                assign size_title = block.settings.heading_size | times: 0.005 | times: base_size_heading
                if section.settings.border_column == 'line_vertical'
                  assign column_end = false
                  
                  assign modulo_column = forloop.index | modulo: columns_desktop
                  if modulo_column == 0 and enable_desktop_slider == false
                    assign column_end = true
                  endif

                  assign column_end_tablet = false
                  assign modulo_column = forloop.index | modulo: 2
                  if modulo_column == 0 and enable_desktop_slider == false
                    assign column_end_tablet = true
                  endif

                  assign column_end_mobile = false
                  assign modulo_column = forloop.index | modulo: 2
                  if modulo_column == 0 and swiper_on_mobile == false and columns_mobile == 2
                    assign column_end_mobile = true
                  endif
                  if columns_mobile == 1 and swiper_on_mobile == false
                    assign column_end_mobile = true
                  endif 
                  if swiper_on_mobile
                    assign column_end_mobile = true
                  endif 
                endif

                assign show_end_date = false
                assign show_end_time = false

                assign start_hour = block.settings.start_hour | times: 1
                assign start_minute = block.settings.start_minute | times: 1
                assign end_hour = block.settings.end_hour | times: 1
                assign end_minute = block.settings.end_minute | times: 1
    
                if start_hour == 12
                  assign timeStart = 12 | append: ":" | append: block.settings.start_minute | append: " PM"
                elsif start_hour == 0
                  assign timeStart = 12 | append: ":" | append: block.settings.start_minute | append: " AM"
                elsif start_hour > 12
                  assign timeStart = block.settings.start_hour | minus: 12
                  if timeStart < 10
                    assign timeStart = "0" | append: timeStart | append: ":" | append: block.settings.start_minute | append: " PM"
                  else
                    assign timeStart = timeStart | append: ":" | append: block.settings.start_minute | append: " PM"
                  endif
                else
                  assign timeStart = block.settings.start_hour | append: ":" | append: block.settings.start_minute | append: " AM"
                endif
                if end_hour == 12
                  assign timeEnd = 12 | append: ":" | append: block.settings.end_minute | append: " PM"
                elsif end_hour == 0
                  assign timeEnd = 12 | append: ":" | append: block.settings.end_minute | append: " AM"
                elsif end_hour > 12
                  assign timeEnd = block.settings.end_hour | minus: 12
                  if timeEnd < 10
                    assign timeEnd = "0" | append: timeEnd | append: ":" | append: block.settings.end_minute | append: " PM"
                  else
                    assign timeEnd = timeEnd | append: ":" | append: block.settings.end_minute | append: " PM"
                  endif
                else
                  assign timeEnd = block.settings.end_hour | append: ":" | append: block.settings.end_minute | append: " AM"
                endif

                assign date = block.settings.start_year | append: '-' | append: block.settings.start_month | append: "-" | append: block.settings.start_day | date: "%b %d, %Y"
                assign end_date = block.settings.end_year | append: '-' | append: block.settings.end_month | append: "-" | append: block.settings.end_day | date: "%b %d, %Y"
                assign compare_date = date | date: "%s" | times: 1
                assign compare_end_date = end_date | date: "%s" | times: 1
                if block.settings.show_end_date and compare_end_date > compare_date
                  assign show_end_date = true
                elsif block.settings.show_end_date and compare_end_date == compare_date and end_hour > start_hour
                  assign show_end_time = true
                elsif block.settings.show_end_date and end_hour == start_hour and end_minute > start_minute
                  assign show_end_time = true
                endif
              -%}
              
              {%- style -%}
                .heading--{{ block.id }} {
                  font-size: {{ size_title | times: 0.8 }}rem;
                }
                @media (min-width: 767px){
                  .heading--{{ block.id }} {
                    font-size: {{ size_title }}rem;
                  }
                }
              {%- endstyle -%}
              {%- capture xPromoCodeDetail -%}
                {
                  "sectionID": "{{ section.id }}",
                  "blockID": "{{ block.id }}",
                  "title": "{{ block.settings.title }}",
                  "details": "{{ block.settings.promo_terms_content | escape | default: '' }}",
                  "page": "{{ block.settings.promo_terms_link.handle | default: '' }}",
                  "timezone": {{ section.settings.timezone | default: 0 }},
                  "start_year": {{ block.settings.start_year | default: 0 }},
                  "start_month": {{ block.settings.start_month | default: 0 }},
                  "start_day": {{ block.settings.start_day | default: 0 }},
                  "start_hour": {{ block.settings.start_hour | default: 0 }},
                  "start_minute": {{ block.settings.start_minute | plus: 0 | default: 0 }},
                  "end_year": {{ block.settings.end_year | default: 0 }},
                  "end_month": {{ block.settings.end_month | default: 0 }},
                  "end_day": {{ block.settings.end_day | default: 0 }},
                  "end_hour": {{ block.settings.end_hour | default: 0 }},
                  "end_minute": {{ block.settings.end_minute | plus: 0 | default: 0 }},
                  "timeStart": "{{ timeStart }}",
                  "timeEnd": "{{ timeEnd }}",
                  "date": "{{ date }}",
                  "end_date": "{{ end_date }}",
                  "set_end_date": {{ block.settings.show_end_date }},
                  "show_start_date": {{ block.settings.show_start_date }},
                  "show_end_date": {{ show_end_date }},
                  "show_end_time": {{ show_end_time }}
                }
              {%- endcapture -%}
              <div
                {% if block.settings.coupon_code != blank %} 
                  x-data='xCounponCode()'
                  x-init='load("{{ block.settings.coupon_code }}")'
                  x-intersect.once.margin.-20px.200px.-20px.200px="handleScheduleCoupon($el)"
                {% endif %}
                x-slide-index="{{ forloop.index | minus: 1 }}"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
