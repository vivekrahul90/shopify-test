{%- liquid
  if section.settings.enable == false or section.settings.show_only_on_homepage and template.name != "index"
    assign show = false
  else
    assign show = true
  endif
  assign base_size = settings.text_base_size | times: 0.00875
  assign check_text_color = section.settings.text_color | color_extract: 'alpha'
  assign check_text_color_dark = section.settings.text_color_dark | color_extract: 'alpha'
  assign check_backgound_color = section.settings.backgound_color | color_extract: 'alpha'
  assign check_backgound_color_dark = section.settings.backgound_color_dark | color_extract: 'alpha'
  if section.blocks.size == 1 or section.settings.enable_carousel_on_desktop == false
    assign block = ' md:block'
  endif

  assign show_toolbar = false
  if section.settings.show_language_selector or section.settings.show_social_icons or section.settings.show_currency_selector
    assign show_toolbar = true
  endif 
-%}
{%- style -%}
  #x-announcement-bar .arrow {
    background: transparent;
    border: 0;
    box-shadow: none;
    color: {{ section.settings.text_color }};
  }
  .dark #x-announcement-bar .arrow {
    color: {{ section.settings.text_color_dark }};
  }
  .announcement-bar_container-{{ section.id }} {
    {% if section.settings.backgound_color != blank and check_backgound_color and check_backgound_color != 0.0 %}
      background: {{ section.settings.backgound_color }};
    {% else %}
      background: rgba(var(--colors-background));
    {% endif %}
    {% unless section.settings.textlink_color_light.alpha == 0.0 %}
      --colors-text-link: {{ section.settings.textlink_color_light.red }},{{ section.settings.textlink_color_light.green }},{{ section.settings.textlink_color_light.blue }};
    {% endunless %}
  }
  .dark .announcement-bar_container-{{ section.id }} {
    {% if section.settings.backgound_color_dark != blank and check_backgound_color_dark and check_backgound_color_dark != 0.0 %}
      background: {{ section.settings.backgound_color_dark }};
    {% else %}
      background: rgba(var(--colors-background));
    {% endif %}
    {%- unless section.settings.textlink_color_dark.alpha == 0.0 -%}
      --colors-text-link: {{ section.settings.textlink_color_dark.red }},{{ section.settings.textlink_color_dark.green }},{{ section.settings.textlink_color_dark.blue }};
    {% else %}  
      --colors-text-link: {{ settings.colors_dark_text_link.red }}, {{ settings.colors_dark_text_link.green }}, {{ settings.colors_dark_text_link.blue }};
    {% endunless %}
  }
  .announcement-bar_text {
    {% if section.settings.text_color != blank and check_text_color and check_text_color != 0.0 %}
      color: {{ section.settings.text_color }};
      --colors-line-and-border: {{ section.settings.text_color.red }},{{ section.settings.text_color.green }},{{ section.settings.text_color.blue }}
    {% else %}
      color: rgb(var(--colors-text));
      --colors-line-and-border: {{ settings.colors_text.red }}, {{ settings.colors_text.green }}, {{ settings.colors_text.blue }};
    {% endif %}
  }
  .dark .announcement-bar_text {
    {% if section.settings.text_color_dark != blank and check_text_color_dark and check_text_color_dark != 0.0 %}
      color: {{ section.settings.text_color_dark }};
      --colors-line-and-border: {{ section.settings.text_color_dark.red }},{{ section.settings.text_color_dark.green }},{{ section.settings.text_color_dark.blue }}
    {% else %}
      color: rgb(var(--colors-text));
      --colors-line-and-border: {{ settings.colors_dark_text.red }}, {{ settings.colors_dark_text.green }}, {{ settings.colors_dark_text.blue }};
    {% endif %}
  }
  {% if section.settings.enable_sticky_bar %}
    .section-announcement {
      position: sticky;
      top: 0;
      z-index: 20;
    }
    .section-announcement:hover {
      z-index: 50;
    }
  {% endif %}

{%- endstyle -%}    
{%- if show -%}
  <div 
    id="x-announcement" 
    class="announcement-bar_container-{{ section.id }} ltr mx-auto flex{% if section.settings.menu != blank %} has-menu-announcement{% endif %}{% if show_toolbar %} has-toolbar{% if section.settings.alignment == 'left' %} flex-row-reverse announcement-bar-right lg:pl-5{% else %} lg:pr-5 announcement-bar-left{% endif %}{% else %} lg:pl-5 lg:pr-5{% endif %}"
    {% if section.settings.enable_sticky_bar %}
      data-is-sticky="true"
    {% endif %}
  >
    {%- if section.settings.menu != blank -%}
      <div class="flex items-center h-full overflow-hidden grow flex-1 w-full menu-position-{{ section.settings.menu_position }}{% if section.blocks.size < 1 %} announcement-bar-none{% endif %}{% if section.settings.menu_position == 'right' %} flex-row-reverse{% endif %}">
        {%- if section.settings.menu != blank -%}
          <ul class="link-list flex-wrap  hidden lg:flex gap-x-5 items-center{% if section.blocks.size > 0 %} md:max-w-[200px] xl:max-w-sm{% endif %}{% if settings.lang_direction contains request.locale.iso_code %} rtl{% endif %}">
            {%- for link in section.settings.menu.links -%}
              <li class="utility-block announcement-bar_text pt-1.5 pb-1.5 ">
                <a
                  href="{{ link.url }}"
                  class="nav-link relative hover-text-link inline-block p-break-words"
                >
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {% endif %}
    {% endif %}
        {% if section.blocks.size > 0 %}
          <div id="x-slide-announcement-bar" class="disable-effect-hover grow flex-1 x-splide splide{% if section.settings.enable_carousel_on_desktop %} cursor-grab lg:pl-12 lg:pr-12{% else %} has-toolbar:lg:pr-5 has-toolbar:lg:pl-5{% endif %} overflow-hidden visible relative{%- if settings.lang_direction contains request.locale.iso_code %} rtl{%- endif %}"
            {%- if section.blocks.size > 1 -%}
              x-intersect.once='$store.xSplide.load($el, {
                "type": "loop",
                "speed": 1000,
                "pagination": false,
                "interval": {{ section.settings.change_bar_every | times: 1000 }},
                {%- if settings.lang_direction contains request.locale.iso_code %} 
                  "direction": "rtl",
                {%- endif %}
                {%- if section.settings.auto_switch_bar -%}
                  "autoplay": true,
                {%- endif -%}
                {% if section.settings.enable_carousel_on_desktop == false -%} 
                "mediaQuery": "min",
                "breakpoints": {
                  768: {
                    "destroy": true
                  }
                },
                {%- endif %}
                "classes": {
                  "arrows" : "block {% if section.settings.show_navigation == false %}hidden{% endif %}"
                }
              })'
            {%- endif -%}
          >
            <div class="splide__track page-width mx-auto pl-0 pr-0">
              <div class="splide__list w-full flex {{ block }}">
              {%- for block in section.blocks -%}
                {%- liquid
                  assign base_size = settings.text_base_size | times: 0.00875
                  assign text_size = block.settings.text_size | times: 0.01 | times: base_size
                  assign text_size_mobile = text_size | times: 0.9
                  assign width_countdown = text_size | times: 9
                -%}
                {%- style -%}
                  .text--{{ block.id }} .width-countdown {
                    width: {{ width_countdown }}rem;
                  }
                  {%- unless block.settings.font_size == 100 -%}
                    .text--{{ block.id }},
                    .btn--{{ block.id }} {
                      font-size: {{ text_size_mobile }}rem;
                    }
                    @media (min-width: 768px) {
                      .text--{{ block.id }},
                      .btn--{{ block.id }} {
                        font-size: {{ text_size }}rem;
                      }
                    }
                  {%- endunless -%}
                  .icon--{{ block.id }} {
                    width: {{ text_size }}rem;
                    height: {{ text_size }}rem;
                  }
                  .button.text_button_announ--{{ block.id }} {
                    {% if block.settings.button_text_color.alpha == 0.0 %}
                      color: rgba(var(--colors-button-text-hover));
                    {% else %}
                      color: {{ block.settings.button_text_color }};
                    {% endif %}
                    {% if block.settings.button_color.alpha != 0.0 %}
                      background: {{ block.settings.button_color }};
                    {% endif %}
                  }
                  .dark .button.text_button_announ--{{ block.id }} {
                    {% if block.settings.button_text_color_dark.alpha == 0.0 %}
                      color: rgba(var(--colors-button-text-hover));
                    {% else %}
                      color: {{ block.settings.button_text_color_dark }};
                    {% endif %}
                    {% if block.settings.button_color_dark.alpha != 0.0 %}
                      background: {{ block.settings.button_color_dark }};
                    {% else %}
                      background: transparent;
                    {% endif %}
                  }
                {%- endstyle -%}
                <div x-slide-index="{{ forloop.index | minus: 1 }}" class="h-auto w-full flex items-center md:flex justify-center splide__slide x-splide-slide gradient text-center py-3 pl-5 pr-5{% if section.settings.menu == blank %} lg:pr-5 lg:pl-5{% else %} lg:pl-0 lg:pr-0{% endif %}{% if forloop.index > 1 and section.settings.enable_carousel_on_desktop == false %} md:border-t md:border-solid{% endif %}" {{ block.shopify_attributes }}>
                  {%- if block.settings.text != blank -%}
                    <div 
                      {% if block.settings.text contains '{count_down}' %}
                        x-data="{ loading: true, textLoad: ' - ', days: 0, hours: 0, minutes: 0, seconds: 0 }"
                        x-intersect.once='$nextTick(() => {
                          $store.xHelper.countdown({
                            "id": "{{ block.id }}",
                            "timezone": {{ block.settings.timezone | default: 0 }},
                            "end_year": {{ block.settings.end_year | default: 0 }},
                            "end_month": {{ block.settings.end_month | default: 0 }},
                            "end_day": {{ block.settings.end_day | default: 0 }},
                            "end_hour": {{ block.settings.end_hour | default: 0 }},
                            "end_minute": {{ block.settings.end_minute | default: 0 }}
                          }, (canShow, s, m, h, d) => {
                            days = d;
                            hours = h;
                            minutes = m;
                            seconds = s;
                            loading = false;
                          })
                        })'
                      {% endif %}
                      class="flex items-center flex-wrap justify-center gap-x-5 gap-y-2 ltr">
                      {% if block.settings.text contains '{count_down}' %}
                        {% capture countdown %}
                          <span class="inline-block width-countdown">
                            <span x-html="loading?textLoad:days">- </span>D&nbsp;&nbsp;
                            <span x-html="loading?textLoad:hours">-</span> :  
                            <span x-html="loading?textLoad:minutes">-</span> : 
                            <span x-html="loading?textLoad:seconds">-</span>  
                          </span>  
                        {% endcapture %}
                      {% endif %}
                      <div class="text--{{ block.id }} announcement-bar_text flex{%- if settings.lang_direction contains request.locale.iso_code %} order-1{% endif %}">
                        {%- if block.settings.icon != 'none' -%}
                          <div class="flex items-center{%- if settings.lang_direction contains request.locale.iso_code %} -rotate-180 order-1{% endif %}">
                            <span class="mr-2 md:mr-3 inline-block icon--{{ block.id }}">
                              {% if block.settings.custom_icon == blank %}
                                {% render 'icon-labels-bags', icon: block.settings.icon, enable_announcement: true %}
                              {% else %}
                                {{ block.settings.custom_icon }}
                              {% endif %}
                            </span>
                          </div>
                        {%- endif -%}
                        {% assign text = block.settings.text | replace: "{count_down}", countdown %}
                        {%- if block.settings.link != blank -%}
                          <p>
                            <a href="{{ block.settings.link }}"{% if block.settings.open_new_window %} target="_blank"{% endif %} 
                              onclick="clevertap.event.push('Announcement_bar_click', {'Page name': '{% if request.page_type == 'index' %}Home page{% else %}{{ request.page_type }}{% endif %}', 'Page URL': '{% if request.page_type == 'index' %}{{ request.origin }}{% else %}{{ request.path }}{% endif %}'})"
                              class="button-link relative hover-text-link x-announcement-bar-block-data leading-[initial]"
                            >{{ text }}</a>
                          </p>
                        {%- else -%}
                          <p class="x-announcement-bar-block-data leading-[initial]"
                          >{{ text }}
                        </p>
                        {%- endif -%}
                      </div> 
                      {%- case block.type -%}
                        {%- when 'announcement' -%}
                          {%- if block.settings.button_label_or_code != blank -%}
                            <div class="flex items-center">
                              {% if block.settings.button_link == blank %}
                                <p class="button btn--{{ block.id }} inline-block none_transition text_button_announ--{{ block.id }} empty:hidden center px-2 py-1 md:px-2.5 opacity-70 hover:cursor-not-allowed">
                                  {{ block.settings.button_label_or_code | escape }}
                                </p>
                              {%- else -%}
                                <a class="button relative disable-effect btn--{{ block.id }} inline-block none_transition text_button_announ--{{ block.id }} empty:hidden center px-2 py-1 md:px-2.5" href="{{ block.settings.button_link }}"{% if block.settings.open_new_window_button %} target="_blank"{% endif %}>
                                  {{ block.settings.button_label_or_code | escape }}
                                </a>
                              {%- endif -%}
                            </div>
                          {%- endif -%}
                        {%- when 'promo_code' -%}
                          {% if block.settings.button_label_or_code != blank %}
                            {% style %}
                            .button-coupon--{{ block.id }} {
                              {%- unless block.settings.coupon_color.alpha == 0.0 -%}
                                color: {{ block.settings.coupon_color }};
                                border-color: {{ block.settings.coupon_color }};
                              {% else %}
                                color: var(--colors-button-hover);
                                border-color: var(--colors-button-hover);
                              {%- endunless -%}
                            }
                            .dark .button-coupon--{{ block.id }} {
                              {%- unless block.settings.coupon_color_dark.alpha == 0.0 -%}
                                color: {{ block.settings.coupon_color_dark }};
                                border-color: {{ block.settings.coupon_color_dark }};                      
                              {% else %}  
                                color: var(--colors-button-hover);
                                border-color: var(--colors-button-hover);                      
                              {% endunless %}
                            }
                            {% endstyle %}
                            <div>
                              <button :title="coppySuccess?'{{ 'general.global.copied' | t }}':'{{ 'general.global.copy_code' | t }}'" x-data='xCounponCode' x-on:click="copyCode()" class="button-coupon--{{ block.id }} border rounded-full border-dashed overflow-hidden items-center flex btn--{{ block.id }} none_transition empty:hidden center pl-2 pr-2 pt-1 pb-1 md:pl-3 md:pr-2.5">
                                <p x-ref="code_value">
                                  {{ block.settings.button_label_or_code | escape }}
                                </p>
                                <div class="md:ml-4 ml-3 flex items-center">
                                  <span class="icon--{{ block.id }} inline-block" x-show="!coppySuccess"
                                    x-transition:enter="transition-all absolute ease-in-out duration-300"
                                    x-transition:enter-start="opacity-0 absolute transform translate-y-full"
                                    x-transition:enter-end="opacity-100 absolute transform translate-y-0"
                                    x-transition:leave="transition-all absolute ease-in-out duration-300"
                                    x-transition:leave-end="opacity-0 transform absolute -translate-y-full">
                                  {% render 'icon-alls', icon: 'icon-copy' %}
                                  </span>
                                  <span class="icon--{{ block.id }} inline-block" x-show="coppySuccess" x-cloak
                                    x-transition:enter="transition-all ease-in-out duration-300"
                                    x-transition:enter-start="opacity-0 transform translate-y-full"
                                    x-transition:enter-end="opacity-100 transform translate-y-0"
                                    x-transition:leave="transition ease-in-out duration-300"
                                    x-transition:leave-end="opacity-0 transform -translate-y-full">
                                    {% render 'icon-alls', icon: 'icon-check' %}
                                  </span>
                                </div>
                              </button>
                            </div>
                            <script src="{{ 'coupon-code.js' | asset_url }}" defer></script>
                          {% endif %}
                      {%- endcase -%}
                    </div>
                  {%- endif -%}
                </div>
              {%- endfor -%}
              </div>
            </div>
            {%- if section.settings.show_navigation and section.settings.enable_carousel_on_desktop and section.blocks.size > 1 -%}
              <div class="hidden lg:block splide__arrows">
                <button class="splide__arrow splide__arrow--prev announcement-bar_text absolute none_border z-10 top-1/2 opacity-70 -translate-y-1/2 rtl:md:right-3 rtl:lg:right-4 rtl:-rotate-90 rtl:left-auto md:left-3 lg:left-4 rotate-90 disabled:cursor-not-allowed bg-none bg-inherit pt-2.5 pr-2.5 pb-2.5 pl-2.5" aria-label="previous slide">
                  <span class="block w-4 h-4">{% render 'icon-alls', icon: 'icon-caret' %}</span>
                </button>
                <button class="splide__arrow splide__arrow--next announcement-bar_text absolute none_border z-10 top-1/2 opacity-70 -translate-y-1/2 rtl:md:left-3 rtl:lg:left-4 rtl:rotate-90 rtl:right-auto  md:right-3 lg:right-4 -rotate-90 disabled:cursor-not-allowed bg-none bg-inherit pt-2.5 pr-2.5 pb-2.5 pl-2.5" aria-label="next slide">
                  <span class="block w-4 h-4">{% render 'icon-alls', icon: 'icon-caret' %}</span>
                </button>
              </div>
            {%- endif -%}
          </div>
        {% endif %}
    {%- if section.settings.menu != blank -%}
    </div>
    {% endif %}
    {%- if show_toolbar -%}
      {% liquid
        assign text_size_toolbar =  settings.text_base_size | times: section.settings.text_size_toolbar | times: 0.0000875
      %}
      {%- style -%}
        .announcement-bar-toolbar #localization_form button {
          font-size: {{ text_size_toolbar | times: 0.9 }}rem;
        }
        @media (min-width: 1025px){
          .announcement-bar-toolbar #localization_form button {
            font-size: {{ text_size_toolbar }}rem; 
          }
        }
      {%- endstyle -%}
      <div class="announcement-bar_text announcement-bar-toolbar toolbar-align-{{ section.settings.alignment }} hidden relative lg:flex items-center">
        {% render 'toolbar', 
          show_currency_selector: section.settings.show_currency_selector, 
          show_language_selector: section.settings.show_language_selector, 
          show_social_icons: section.settings.show_social_icons,
          toolbar_align: section.settings.alignment
        %}
      </div>
    {%- endif -%} 
  </div>
{%- endif -%}
{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "class": "section-announcement",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "t:sections.announcement-bar.settings.enable.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_only_on_homepage",
      "label": "t:sections.announcement-bar.settings.show_only_on_homepage.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sticky_bar",
      "label": "t:sections.announcement-bar.settings.enable_sticky_bar.label"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel_on_desktop",
      "label": "t:sections.announcement-bar.settings.enable_carousel_on_desktop.label",
      "info": "t:sections.announcement-bar.settings.enable_carousel_on_desktop.info",
      "default": true
    },
    {
      "type": "color",
      "id": "backgound_color",
      "label": "t:sections.announcement-bar.settings.backgound_color.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.announcement-bar.settings.text_color.label",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "textlink_color_light",
      "default": "rgba(0,0,0,0)",
      "label": "t:sections.main-collection-banner.block.textlink_color_light"
    },
    {
      "type": "color",
      "id": "backgound_color_dark",
      "label": "t:sections.announcement-bar.settings.backgound_color_dark.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color_dark",
      "label": "t:sections.announcement-bar.settings.text_color_dark.label",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "textlink_color_dark",
      "default": "rgba(0,0,0,0)",
      "label": "t:sections.main-collection-banner.block.textlink_color_dark"
    },
    {
      "type": "header",
      "content": "t:sections.mobile-navigation.blocks.menu.settings.menu.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:sections.mobile-navigation.blocks.menu.settings.menu.label",
      "info": "t:sections.announcement-bar.settings.only_show_first_level_menu.label"
    },
    {
      "type": "select",
      "id": "menu_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.content_alignment.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.content_alignment.options__3.label"
        }
      ],
      "default": "right",
      "label": "t:sections.promotion-banner.settings.desktop_content_position.label"
    },
    {
      "type": "header",
      "content": "t:sections.announcement-bar.settings.carousel.name"
    },
    {
      "type": "checkbox",
      "id": "auto_switch_bar",
      "label": "t:sections.announcement-bar.settings.auto_switch_bar.label",
      "default": true
    },
    {
      "type": "range",
      "id": "change_bar_every",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.announcement-bar.settings.change_bar_every.label",
      "info": "t:sections.announcement-bar.settings.change_bar_every.info",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:sections.announcement-bar.settings.show_navigation.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "default": true,
      "label": "t:sections.header.settings.show_social_icons.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.language_currency"
    },
    {
      "type": "select",
      "id": "alignment",
      "default": "right",
      "label": "t:sections.all.alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.all.content_alignment.options__1.label"
        },
        {
          "value": "right",
          "label": "t:sections.all.content_alignment.options__3.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "default": true,
      "label": "t:sections.header.settings.show_language_selector.label"
    },
    {
      "type": "checkbox",
      "id": "show_currency_selector",
      "default": true,
      "label": "t:sections.header.settings.show_currency_selector.label"
    },
    {
      "type": "range",
      "id": "text_size_toolbar",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "%",
      "label": "t:sections.announcement-bar.blocks.announcement.text_size.label",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "none",
              "label": "t:sections.all.icon.options.none"
            },
            {
              "value": "activity",
              "label": "t:sections.all.icon.options.activity"
            },
            {
              "value": "archive",
              "label": "t:sections.all.icon.options.archive"
            },
            {
              "value": "arrow-down-cricle",
              "label": "t:sections.all.icon.options.arrow-down-cricle"
            },
