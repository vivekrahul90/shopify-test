{% schema %}
{
  "name": "Testimonial Slider",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "You'll want to stock up to experience the best of your life, night after night..."
    }
  ],
  "blocks": [
    {
      "type": "testimonial_block",
      "name": "Testimonial",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_quotes_icon",
          "label": "Show quotes icon? (text-based)",
          "default": false
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text",
          "default": "Slumberly supplements have been a game-changer. After trying the first bottle, I switched to the subscription because I never want to go back to restless nights!"
        },
        {
          "type": "text",
          "id": "testimonial_name",
          "label": "Author Name",
          "default": "Laura P."
        },
        {
          "type": "text",
          "id": "secondary_label",
          "label": "Secondary Label (e.g., 'Slumberly Member')",
          "default": "Slumberly Member"
        },
        {
          "type": "checkbox",
          "id": "show_verified_buyer",
          "label": "Show 'Verified Buyer' (with text checkmark)",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_star_rating",
          "label": "Show Star Rating",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.testimonial-slider-section {
  padding: 40px 0;
  background-color: #fafafa; /* optional */
  text-align: center;
}

.testimonial-slider-header {
  max-width: 800px;
  margin: 0 auto 40px auto;
}

.testimonial-slider-title {
  font-size: 26px;
  font-weight: 700;
  margin-bottom: 8px;
}

.testimonial-slider-subtitle {
  font-size: 16px;
  color: #555;
  max-width: 600px;
  margin: 0 auto;
}

.testimonial-slider-wrapper {
  position: relative;
  max-width: 600px;
  margin: 0 auto;
  overflow: hidden;
}

/* Slider track + slides */
.testimonial-slider-track {
  display: flex;
  transition: transform 0.4s ease;
}
.testimonial-slide {
  flex: 0 0 100%;
  box-sizing: border-box;
}

.testimonial-card {
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  padding: 24px;
  margin: 0 16px;
  text-align: left;
  position: relative;
  min-height: 280px;
}

.testimonial-quote-icon {
  font-size: 32px;
  color: #ced4da;
  position: absolute;
  top: 16px;
  left: 16px;
}

.testimonial-text {
  font-size: 16px;
  color: #444;
  line-height: 1.4;
  margin-bottom: 24px;
  margin-top: 8px;
}

.testimonial-author-info {
  margin-bottom: 12px;
}

.testimonial-author-name {
  font-weight: 600;
  font-size: 16px;
  margin-bottom: 4px;
}

.testimonial-author-role {
  font-size: 14px;
  color: #777;
}

.testimonial-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 8px;
}

.testimonial-verified-buyer {
  color: #57b74e; /* Or any color you like */
  font-weight: 500;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.verified-check-icon {
  flex-shrink: 0; /* Prevent icon from shrinking */
}

/* Star icons */
.testimonial-stars {
  display: flex;
  gap: 2px;
}
.star-icon {
  width: 18px;
  height: 18px;
  color: #f0df21; /* star color */
}

/* Arrows + Dots */
.testimonial-slider-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24px;
  margin-top: 24px;
}
.slider-arrow {
  background-color: transparent; 
  border: none;
  cursor: pointer;
  padding: 0;
}
.arrow-icon {
  stroke: #333;  /* arrow outline color */
  fill: none;    /* circle fill is none */
  transition: stroke 0.3s;
}
.slider-arrow:hover .arrow-icon {
  stroke: #000;  /* darker on hover */
}

.slider-dots {
  display: flex;
  gap: 8px;
}
.dot {
  width: 10px;
  height: 10px;
  background-color: #ccc;
  border-radius: 50%;
  cursor: pointer;
  display: inline-block;
  transition: background-color 0.3s;
}
.dot.active {
  background-color: #0d1f44;
}
{% endstylesheet %}

<script>
function initMinimalTestimonialSlider(sectionId) {
  const track = document.getElementById(`slider-track-${sectionId}`);
  if (!track) return; // Safety check

  const slides = track.querySelectorAll('.testimonial-slide');
  const prevBtn = document.getElementById(`arrow-left-${sectionId}`);
  const nextBtn = document.getElementById(`arrow-right-${sectionId}`);
  const dotsContainer = document.getElementById(`slider-dots-${sectionId}`);

  // Clear existing dots (if any), then rebuild
  dotsContainer.innerHTML = "";
  for (let i = 0; i < slides.length; i++) {
    const dot = document.createElement('span');
    dot.classList.add('dot');
    dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
    dot.addEventListener('click', () => {
      goToSlide(i);
    });
    dotsContainer.appendChild(dot);
  }
  const dots = dotsContainer.querySelectorAll('.dot');

  let currentSlide = 0;

  function goToSlide(index) {
    currentSlide = index;
    track.style.transform = `translateX(-${100 * currentSlide}%)`;
    updateDots();
  }

  function updateDots() {
    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === currentSlide);
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    goToSlide(currentSlide);
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    goToSlide(currentSlide);
  }

  // Arrow button clicks
  if (nextBtn) nextBtn.addEventListener('click', nextSlide);
  if (prevBtn) prevBtn.addEventListener('click', prevSlide);

  // Initialize
  goToSlide(0);
}

// On DOM load, init once
document.addEventListener('DOMContentLoaded', function() {
  initMinimalTestimonialSlider("{{ section.id }}");
});

// If in Theme Editor, re-init on section load (so dots update when blocks are changed)
document.addEventListener('shopify:section:load', function(event) {
  const section = event.target.querySelector('.testimonial-slider-track');
  if (section && section.dataset.sectionId === '{{ section.id }}') {
    initMinimalTestimonialSlider('{{ section.id }}');
  }
});
</script>
