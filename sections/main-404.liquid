  {%- style -%}
    .heading--{{ section.id }} { font-size: {{ heading_size | times: 0.6 }}rem;     font-family: "Avenir Next", sans-serif; }
    .t-404{
      display : none; 
    }
      .template-404 a.button-solid {
            padding: 9px 10px;
            color: #000;
            margin-top: 20px;
        }
        
        .template-404 h1.title {
            color: #fff;
        }
        
        
        .template-404 .rte {
            color: #fff;
        }

    @media screen and (min-width: 1025px) {
      .heading--{{ section.id }}{
        font-size: {{ heading_size }}rem;
      }  
    }
  {%- endstyle -%}
  <div class="in_content ">
        <h1 class="heading--{{ section.id }} title h2 font-semibold mb-2">
      404 Error
    </h1>
    <h1 class="heading--{{ section.id }} title h2 font-semibold mb-2">
      {% if section.settings.heading != blank %}
        {{ section.settings.heading }}
      {% else %}
        {{ 'templates.404.title' | t }}
      {% endif %}
    </h1>
    {% if section.settings.text != blank %}
      <div class="rte mt-2.5">
        {{ section.settings.text }}
      </div>
    {% endif %}
    <div class="mt-8">
      <a href="{{ routes.all_products_collection_url }}" class="button-solid button relative nav-link effect-inline">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
  </div>
</div>
<div class="hidden relative t404-temp">
  {% if section.settings.image != blank %}
    <img
      class="img-not-found relative inline-block h-full lg:w-full object-cover mb-7 lg:mb-14 w-5/6 md:w-2/3 max-w-[578px]"
      srcset="{{ section.settings.image | image_url: width: 450 }} 450w,
      {{ section.settings.image | image_url: width: 750 }} 750w,
      {{ section.settings.image | image_url: width: 900 }} 900w,
      {{ section.settings.image | image_url: width: 1100 }} 1100w,
      {{ section.settings.image | image_url: width: 1500 }} 1500w,
      {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
      src="{{ section.settings.image | image_url: width: 1500 }}"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      sizes="(min-width: 1024px){% if section.settings.full_width %} 35vw{% else %} {{ settings.page_width | divided_by: 3 }}px{% endif %}, (min-width: 768px) 50vw, 100vw"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
      style="object-position: {{ section.settings.image.presentation.focal_point }}"
    >
    {% endif %}
   <div class="i-cont absolute ">
      <h1 class="heading--{{ section.id }} title h2 font-semibold mb-2">
      {% if section.settings.heading != blank %}
        {{ section.settings.heading }}
      {% else %}
        {{ 'templates.404.title' | t }}
      {% endif %}
    </h1>
    {% if section.settings.text != blank %}
      <div class="rte mt-2.5">
        {{ section.settings.text }}
      </div>
    {% endif %}
    <div class="mt-8 ">
      <a href="{{ routes.all_products_collection_url }}" class="button-solid button relative nav-link effect-inline">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
   </div>
</div>
{% schema %}
{
  "name": "t:sections.main-page.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.all.image.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.contact-form.settings.heading.label"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 50,
      "max": 200,
      "unit": "%",
      "step": 10,
      "default": 70,
      "label": "t:sections.contact-form.settings.heading_size.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.contact-form.settings.text.label"
    }
  ]
}
{% endschema %}