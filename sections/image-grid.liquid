{% raw %}
<!-- sections/image-grid.liquid -->
{{ 'animate.min.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Image Grid",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "Mobile Columns",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image Size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "custom", "label": "Custom" }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Grid Gap",
      "unit": "px",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Item Padding",
      "unit": "px",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 10
    },
    {
      "type": "header",
      "content": "Effects & Animation"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Hover Effect",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "zoom", "label": "Zoom" },
        { "value": "overlay", "label": "Overlay" },
        { "value": "flip", "label": "3D Flip" }
      ],
      "default": "overlay"
    },
    {
      "type": "select",
      "id": "load_animation",
      "label": "Load Animation",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "fadeIn", "label": "Fade" },
        { "value": "slideUp", "label": "Slide Up" },
        { "value": "zoomIn", "label": "Zoom" }
      ],
      "default": "fadeIn"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "new_tab",
          "label": "Open in new tab",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Image Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "header",
          "content": "Style Options"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay Opacity",
          "unit": "%",
          "min": 0,
          "max": 100,
          "step": 10,
          "default": 30
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Grid",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: {{ section.settings.gap }}px;
    padding: {{ section.settings.padding }}px;
  }

  @media (max-width: 768px) {
    .image-grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
    }
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .grid-item:hover .image-overlay {
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .grid-content {
    position: relative;
    z-index: 2;
    padding: 20px;
    color: {{ section.settings.text_color }};
  }

  {% if section.settings.hover_effect == 'zoom' %}
  .grid-item:hover img {
    transform: scale(1.1);
  }
  {% endif %}

  .animate__animated {
    animation-duration: 0.5s;
  }
</style>

<div class="image-grid animate__animated animate__{{ section.settings.load_animation }}">
  {% for block in section.blocks %}
    <div class="grid-item" {{ block.shopify_attributes }}>
      <a href="{{ block.settings.link }}" target="{{ block.settings.new_tab | yesno: '_blank, '_self' }}">
        {% if block.settings.image != blank %}
          {{
            block.settings.image
            | image_url: width: 800
            | image_tag: class: 'grid-image', loading: 'lazy'
          }}
        {% endif %}
        <div class="image-overlay"></div>
        <div class="grid-content">
          <h3 class="grid-title">{{ block.settings.title }}</h3>
          <div class="grid-description">{{ block.settings.description }}</div>
        </div>
      </a>
    </div>
  {% endfor %}
</div>
{% endraw %}