      "default": false,
      "label": "t:sections.product-recommendations.settings.enable_carousel_desktop.label"
    },
    {
      "type": "checkbox",
      "id": "enable_swiper_mobile",
      "default": false,
      "label": "t:sections.product-recommendations.settings.enable_swiper_mobile.label"
